@model FMSAPI.Models.Tbl_Course 

@{
    ViewBag.Title = "Delete";
}

<h2>Course Delete</h2>


<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left">
            @Html.DisplayName("Course:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course_Name)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayName("Description:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course_Description)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" onclick="return confirm('Are you sure you want to delete this?');"/> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

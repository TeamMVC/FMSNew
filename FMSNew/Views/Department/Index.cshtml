@model IEnumerable<FMSAPI.Models.Tbl_Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Department")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Department")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
       
        <th>  @Html.DisplayName("Action")</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dept_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Dept_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Dept_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Dept_ID })
        </td>
    </tr>
}

</table>
